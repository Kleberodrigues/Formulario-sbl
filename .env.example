# ====================================
# SBL Onboarding Form - Environment Variables
# ====================================
#
# IMPORTANTE:
# 1. Copie este arquivo para .env.local
# 2. Preencha com suas credenciais reais
# 3. NUNCA commite o arquivo .env.local no Git
#
# ====================================

# ====================================
# SUPABASE CONFIGURATION
# ====================================
#
# Obtenha suas credenciais em:
# https://app.supabase.com > Seu Projeto > Settings > API
#
# VITE_SUPABASE_URL: URL do seu projeto Supabase
# VITE_SUPABASE_ANON_KEY: Chave pública (anon/public)
#

VITE_SUPABASE_URL=https://seu-projeto.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...


# ====================================
# MAPLIBRE / MAP CONFIGURATION
# ====================================
#
# ✅ MapLibre é GRATUITO e não requer token!
# O projeto agora usa MapLibre GL JS com tiles do OpenStreetMap
#
# OPCIONAL: Se quiser usar Mapbox (pago), configure o token abaixo
# https://account.mapbox.com/access-tokens/
#

# VITE_MAPBOX_ACCESS_TOKEN=pk.seu-token-aqui (OPCIONAL - não é mais necessário)


# ====================================
# N8N WEBHOOK CONFIGURATION
# ====================================
#
# Configure seu workflow n8n e obtenha a URL do webhook
#
# VITE_N8N_WEBHOOK_URL: URL do webhook n8n para automações
#

VITE_N8N_WEBHOOK_URL=https://seu-n8n.com/webhook/sbl-onboarding


# ====================================
# APPLICATION CONFIGURATION
# ====================================
#
# VITE_APP_URL: URL base da aplicação (para links de retorno)
# VITE_APP_NAME: Nome da aplicação
# VITE_APP_ENV: Ambiente (development, staging, production)
#

VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=SBL Onboarding Form
VITE_APP_ENV=development


# ====================================
# FEATURE FLAGS (OPCIONAL)
# ====================================
#
# Habilite/desabilite funcionalidades específicas
#

VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ABANDONMENT_TRACKING=true
VITE_ENABLE_AUTO_SAVE=true
VITE_ENABLE_DEBUG_LOGS=true


# ====================================
# STORAGE CONFIGURATION (OPCIONAL)
# ====================================
#
# Configurações para uploads de arquivos
#

VITE_MAX_FILE_SIZE=10485760
VITE_MAX_IMAGE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf


# ====================================
# SUPABASE STORAGE BUCKET
# ====================================
#
# Nome do bucket do Supabase Storage
# (Você precisa criar este bucket manualmente no Supabase)
#

VITE_STORAGE_BUCKET=form-documents


# ====================================
# VALIDATIONS (OPCIONAL)
# ====================================
#
# Configurações de validação
#

VITE_MIN_AGE=18
VITE_ADDRESS_HISTORY_YEARS=7


# ====================================
# AUTO-SAVE CONFIGURATION (OPCIONAL)
# ====================================
#
# Configurações de auto-save
#

VITE_AUTO_SAVE_DELAY=2000
VITE_AUTO_SAVE_DEBOUNCE=500


# ====================================
# GDPR/PRIVACY CONFIGURATION (OPCIONAL)
# ====================================
#
# Links para políticas de privacidade
#

VITE_PRIVACY_POLICY_URL=https://sbl.zeritycloud.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://sbl.zeritycloud.com/terms
VITE_COOKIE_POLICY_URL=https://sbl.zeritycloud.com/cookies


# ====================================
# EMAIL CONFIGURATION (VIA N8N)
# ====================================
#
# Configurações para emails via n8n
#

VITE_EMAIL_FROM=noreply@silvabrotherslogistics.com
VITE_EMAIL_SUPPORT=support@silvabrotherslogistics.com


# ====================================
# WHATSAPP CONFIGURATION (VIA N8N)
# ====================================
#
# Configurações para WhatsApp via n8n
#

VITE_WHATSAPP_BUSINESS_NUMBER=+44123456789


# ====================================
# ANALYTICS (OPCIONAL)
# ====================================
#
# Integrações de analytics
#

VITE_GOOGLE_ANALYTICS_ID=
VITE_FACEBOOK_PIXEL_ID=
VITE_HOTJAR_ID=


# ====================================
# SENTRY ERROR TRACKING (OPCIONAL)
# ====================================
#
# Rastreamento de erros com Sentry
#

VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development


# ====================================
# RATE LIMITING (OPCIONAL)
# ====================================
#
# Configurações de rate limiting
#

VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=900000


# ====================================
# ABANDONMENT TRACKING (OPCIONAL)
# ====================================
#
# Configurações de rastreamento de abandono
#

VITE_ABANDONMENT_THRESHOLD_MINUTES=30
VITE_ABANDONMENT_CHECK_INTERVAL_MS=60000


# ====================================
# LOCALE/I18N CONFIGURATION
# ====================================
#
# Configurações de idioma
#

VITE_DEFAULT_LANGUAGE=pt-BR
VITE_AVAILABLE_LANGUAGES=pt-BR,en,bg,ro


# ====================================
# SESSION CONFIGURATION
# ====================================
#
# Configurações de sessão
#

VITE_SESSION_TIMEOUT_MINUTES=60
VITE_SESSION_WARNING_MINUTES=5


# ====================================
# DEBUGGING
# ====================================
#
# Ative logs detalhados (apenas em desenvolvimento)
#

VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info


# ====================================
# BACKUP & RECOVERY (OPCIONAL)
# ====================================
#
# Configurações de backup
#

VITE_ENABLE_LOCAL_BACKUP=true
VITE_BACKUP_INTERVAL_MS=300000


# ====================================
# CUSTOM BRANDING (OPCIONAL)
# ====================================
#
# URLs customizadas
#

VITE_COMPANY_WEBSITE=https://silvabrotherslogistics.com
VITE_COMPANY_LOGO_URL=/assets/logo.jpg
VITE_COMPANY_NAME=Silva Brothers Logistics LTD


# ====================================
# CORS & SECURITY (OPCIONAL)
# ====================================
#
# Configurações de segurança
#

VITE_ALLOWED_ORIGINS=http://localhost:5173,https://sbl.zeritycloud.com
VITE_ENABLE_CSRF_PROTECTION=true


# ====================================
# WEBHOOK RETRY CONFIGURATION (OPCIONAL)
# ====================================
#
# Configurações de retry para webhooks
#

VITE_WEBHOOK_MAX_RETRIES=3
VITE_WEBHOOK_RETRY_DELAY_MS=1000


# ====================================
# PERFORMANCE MONITORING (OPCIONAL)
# ====================================
#
# Monitoramento de performance
#

VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_PERFORMANCE_SAMPLE_RATE=0.1


# ====================================
# NOTAS IMPORTANTES
# ====================================
#
# 1. Variáveis com VITE_ prefix são expostas ao browser
# 2. NUNCA exponha segredos ou chaves privadas com VITE_
# 3. Use variáveis server-side (sem VITE_) para dados sensíveis
# 4. Certifique-se de que .env.local está no .gitignore
# 5. Reinicie o servidor após alterar variáveis de ambiente
#
# ====================================
